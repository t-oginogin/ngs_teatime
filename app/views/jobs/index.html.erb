<h1>Listing jobs</h1>

<br/>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.job.id') %></th>
      <th><%= t('activerecord.attributes.job.tool') %></th>
      <th><%= t('activerecord.attributes.job.target_file_1') %></th>
      <th><%= t('activerecord.attributes.job.target_file_2') %></th>
      <th><%= t('activerecord.attributes.job.reference_file_1') %></th>
      <th><%= t('activerecord.attributes.job.reference_file_2') %></th>
      <th><%= t('activerecord.attributes.job.comment') %></th>
      <th><%= t('activerecord.attributes.job.status') %></th>
      <th colspan="8"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.id %></td>
        <td><%= job.tool %></td>
        <td><%= job.target_file_1.file.try(:filename) if job.target_file_1 %></td>
        <td><%= job.target_file_2.file.try(:filename) if job.target_file_2 %></td>
        <td><%= job.reference_file_1.file.try(:filename) if job.reference_file_1 %></td>
        <td><%= job.reference_file_2.file.try(:filename) if job.reference_file_2 %></td>
        <td><%= job.comment %></td>
        <td><%= Job::STATUS[job.status] %></td>
        <td><%= link_to t('messages.show'), job %></td>
        <td><%= link_to t('messages.edit'), edit_job_path(job) %></td>
        <td><%= link_to t('messages.delete'), job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="row">
  <div class="col-md-1">
    <%= link_to t('messages.new_job'), new_job_path, class: "btn btn-primary" %>
  </div>
</div>
